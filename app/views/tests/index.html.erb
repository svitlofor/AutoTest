<p id="notice"><%= notice %></p>

<h1>Listing Tests</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Text</th>
      <th>Answers</th>
      <th>Right answer</th>
      <th>Comment</th>
      <th>Ext comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.image %></td>
        <td><%= test.text %></td>
        <td><%= test.answers %></td>
        <td><%= test.right_answer %></td>
        <td><%= test.comment %></td>
        <td><%= test.ext_comment %></td>
        <td><%= link_to 'Show', test %></td>
        <td><%= link_to 'Edit', edit_test_path(test) %></td>
        <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

